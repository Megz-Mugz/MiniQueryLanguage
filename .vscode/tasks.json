{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build program",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++20",                              
          "-g",
          "${workspaceFolder}/src/main.cpp",
          "-o",
          "${workspaceFolder}/src/main"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }